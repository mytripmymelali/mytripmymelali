        // Language Switching Function
        function switchLanguage(lang) {
            // Update all elements with data-lang-key
            document.querySelectorAll('[id]').forEach(element => {
                const key = element.id;
                if (languageData[lang][key]) {
                    if (element.tagName === 'INPUT' || element.tagName === 'TEXTAREA') {
                        element.placeholder = languageData[lang][key];
                    } else {
                        element.textContent = languageData[lang][key];
                    }
                }
            });
            
            // Update active language button
            document.querySelectorAll('.lang-btn').forEach(btn => {
                btn.classList.remove('active');
            });
            document.getElementById(`${lang}-lang`).classList.add('active');
        }

        // Initialize with Indonesian
        switchLanguage('id');

        // Event Listeners for Language Buttons
        document.getElementById('id-lang').addEventListener('click', () => {
            switchLanguage('id');
        });

        document.getElementById('en-lang').addEventListener('click', () => {
            switchLanguage('en');
        });

        // Tab Switching Functionality
        document.querySelectorAll('.tab').forEach(tab => {
            tab.addEventListener('click', function() {
                // Remove active class from all tabs
                document.querySelectorAll('.tab').forEach(t => {
                    t.classList.remove('active');
                });
                
                // Add active class to clicked tab
                this.classList.add('active');
                
                // Update route title
                const route = this.getAttribute('data-route');
                if (route === 'padangbai-gili') {
                    document.getElementById('route-title').textContent = 
                        document.querySelector('.lang-btn.active').id === 'id-lang' ? 
                        'Padangbai ke Pulau Gili' : 'Padangbai to Gili Islands';
                } else {
                    document.getElementById('route-title').textContent = 
                        document.querySelector('.lang-btn.active').id === 'id-lang' ? 
                        'Pulau Gili ke Padangbai' : 'Gili Islands to Padangbai';
                }
            });
        });

        // Booking Form Submission
        document.getElementById('booking-form').addEventListener('submit', function(e) {
            e.preventDefault();
            
            // In a real application, this would send data to the server
            alert(document.querySelector('.lang-btn.active').id === 'id-lang' ?
                'Pemesanan berhasil! Silakan cek email Anda untuk detail pembayaran.' :
                'Booking successful! Please check your email for payment details.');
        });
    </script>
</body>
</html>
